@model ECommerceShop.DAL.Tbl_Product
@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <hr />
    <div class="card mb-4">
        <div class="card-body">
            <h4><span style="color:red">Warning!</span> Do you want to delete "@Model.ProductName" product?</h4>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ProductId, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a onclick="window.history.back();" class="btn btn-primary" style="color:white">Cancel</a>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
